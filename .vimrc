" Fichero .vimrc de mi usuario

set nobackup
set ruler

" nocompatible permite funciones que VI no soporta
set nocompatible

" use mouse as visual mode
"set mouse+=a

set tabstop=4
set sw=4
set expandtab
"set number

set vb
set noerrorbells
syntax on

set background=dark

set colorcolumn=80
highlight ColorColumn ctermbg=238 
